<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:clickable="true"
    android:background="@drawable/bg_white_stroke_gray">

    <ImageView
        android:id="@+id/iv_searchbar_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/nw"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp" />

    <EditText
        android:id="@+id/et_search_poi"
        android:layout_toRightOf="@id/iv_searchbar_search"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="请输入您感兴趣的地点"
        android:textColorHint="@color/gray"
        android:textColor="@color/gray"
        android:textSize="16sp"
        android:singleLine="true"/>

    <ImageView
        android:id="@+id/iv_searchbar_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:src="@mipmap/nu" />


    <ImageView
        android:layout_toLeftOf="@id/iv_searchbar_go"
        android:layout_marginRight="10dp"
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/gray" />

</RelativeLayout>